# Production Environment Variables
NODE_ENV=production
PORT=3000
DATABASE_URL=postgres://postgres:password@postgres:5432/realtime_notes
SESSION_SECRET=your-very-secure-secret-key-here-change-me

# Optional: Set custom cleanup interval (in milliseconds)
# CLEANUP_INTERVAL=86400000  # 24 hours

# Optional: Set custom note expiration (in days)
# NOTE_EXPIRATION_DAYS=7

# Optional: Set custom rate limiting
# RATE_LIMIT_WINDOW_MS=60000  # 1 minute
# RATE_LIMIT_MAX_REQUESTS=100

# Optional: Set custom content size limit (in bytes)
# MAX_CONTENT_SIZE=1048576  # 1MB
